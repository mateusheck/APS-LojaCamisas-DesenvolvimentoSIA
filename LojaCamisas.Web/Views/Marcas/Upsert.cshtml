@model LojaCamisas.Application.ViewModels.MarcaViewModel

@{
    ViewData["Title"] = (Model != null && Model.Id != 0) ? "Editar Marca" : "Criar Marca";
}

<form method="post" asp-action="Upsert">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">@ViewData["Title"]</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="Nome"></label>
            <input asp-for="Nome" class="form-control" />
            <span asp-validation-for="Nome" class="text-danger"></span>
        </div>

        @if (Model != null && Model.Id != 0)
        {
            <button type="submit" class="btn btn-primary" style="width:150px">Atualizar</button>
        }
        else
        {
            <button type="submit" class="btn btn-primary" style="width:150px">Criar</button>
        }
        <a asp-controller="Marcas" asp-action="Index" class="btn btn-secondary" style="width:150px">
            Voltar para a Lista
        </a>
    </div>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}