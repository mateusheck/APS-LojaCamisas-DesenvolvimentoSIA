@model LojaCamisas.Application.ViewModels.CamisaViewModel

@{
    ViewData["Title"] = "Details Camisa";
}

<h1>Details Camisa</h1>

<div>
    <h4>Camisa</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Nome</dt>
        <dd class="col-sm-10">@Model.Nome</dd>

        <dt class="col-sm-2">Descrição</dt>
        <dd class="col-sm-10">@Model.Descricao</dd>

        <dt class="col-sm-2">Temporada</dt>
        <dd class="col-sm-10">@Model.Temporada</dd>

        <dt class="col-sm-2">Preço</dt>
        <dd class="col-sm-10">@Model.Preco</dd>

        <dt class="col-sm-2">Marca</dt>
        <dd class="col-sm-10">@Model.MarcaNome</dd>
    </dl>

    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back</a>
</div>
